<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddCustomerActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/customLightBlue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/customBlue"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="5dp"
            android:text="Please Enter Values to Add Employee"
            android:textColor="@android:color/background_light"
            android:textSize="20dp">


        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Customer ID" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:background="@color/customLightBlue"
                android:layout_marginRight="10dp">


            <EditText
                android:id="@+id/editTextCustID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:inputType="number"
                android:backgroundTint="@color/customBlue"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        // first text box ends here

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Customer First Name" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/customLightBlue"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextCustfname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/customBlue"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        // first text box ends here

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Customer Last Name" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/customLightBlue"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextCustlname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/customBlue"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        // first text box ends here

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Customer Age" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/customLightBlue"

                android:layout_marginRight="10dp">


                <EditText
                    android:inputType="number"
                    android:id="@+id/editTextCustage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/customBlue"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        // first text box ends here

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Customer Email" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/customLightBlue"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextCustemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/customBlue"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>




        <Button
            android:id="@+id/buttoncustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/customBlue"
            android:text="Click to Add Customer"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"></Button>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>